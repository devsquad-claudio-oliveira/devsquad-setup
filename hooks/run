#!/bin/sh

echo "1. Install .git/hooks/pre-rebase"
curl https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/pre-rebase -o .git/hooks/pre-rebase
chmod +x .git/hooks/pre-rebase

echo "2. Install .git/hooks/pre-push"
curl https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/pre-push -o .git/hooks/pre-push
chmod +x .git/hooks/pre-push

echo "3. Install .git/hooks/commit-msg"
curl https://raw.githubusercontent.com/elitedevsquad/devsquad-setup/master/hooks/commit-msg -o .git/hooks/commit-msg
chmod +x .git/hooks/commit-msg
